---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
const { image } = Astro.props;
interface Props {
  image: CollectionEntry<"images">;
}

const imageClass =
  "absolute inset-0 h-full w-full object-cover object-center transform transition duration-500 ease-in-out group-hover:scale-110";
---

<span class="group relative flex h-48 items-end overflow-hidden rounded-xl shadow-lg outline-none ring-zinc-500 focus-visible:ring dark:ring-zinc-200 dark:focus:outline-none md:h-72 ">
<Image
    src={image.data.imgCard}
    alt={image.data.imgAlt}
    draggable={"false"}
    class={imageClass}
  
  />
<div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-neutral-800 via-transparent to-transparent opacity-50">
</div>

  <span
    class="relative mb-3 ml-4 inline-block text-sm font-bold text-neutral-50 transition group-hover:scale-110 md:ml-5 md:text-lg"
    >{image.data.description} 
  </span>
</span>
